# ============================================
# Siphon Strategies Executor - Production Config
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1
VERSION=latest

# Solana Configuration
HELIUS_API_KEY=your_helius_api_key
# OR use direct RPC: SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# Executor wallet (base58 encoded private key)
EXECUTOR_PRIVATE_KEY=your-executor-wallet-private-key

# Database
DATABASE_URI=sqlite:///data/strategies.db?timeout=30

# FHE Engine (use Docker service name)
FHE_ENGINE_URL=http://fhe-engine:5001/evaluateStrategy

# Payload Generator (use Docker service name)
ORCHESTRATOR_URL=http://trade-executor:5005/createStrategy

# Optional: Scheduler interval
CHECK_INTERVAL_SECONDS=10

# Optional: Range Compliance
# RANGE_API_KEY=your_range_api_key
